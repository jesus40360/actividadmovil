<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMoneda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Cantidad a convertir"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moneda origen:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moneda destino:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFFFFF" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Convertir"
            android:textColor="#FFFFFF"
            android:backgroundTint="#002b4e"
            android:layout_marginTop="16dp"
            android:onClick="convertirMoneda" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Limpiar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#666666"
            android:layout_marginTop="16dp"
            android:onClick="limpiarCampos" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Salir"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="16dp"
            android:onClick="salirActividad" />
    </LinearLayout>
</ScrollView>
