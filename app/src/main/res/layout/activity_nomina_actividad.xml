<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_nomina"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del trabajador"
            android:textSize="18sp"
            android:textColor="#002b4e"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtRecibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recibo"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"/>

        <EditText
            android:id="@+id/txtHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/horas_trabajadas"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"/>

        <EditText
            android:id="@+id/txtExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/horas_extras"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/puesto"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="12dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rdbAuxiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auxiliar"
                android:textColor="#000000"
                android:checked="true"
                android:padding="15dp" />

            <RadioButton
                android:id="@+id/rdbAlbanil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/albanil"
                android:textColor="#000000"
                android:padding="15dp"
                android:layout_marginStart="12dp" />

            <RadioButton
                android:id="@+id/rdbIng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingeniero"
                android:textColor="#000000"
                android:padding="15dp"
                android:layout_marginStart="12dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/txtSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal: $0.00"
            android:textColor="#000000"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/txtImpuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impuesto: $0.00"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total a pagar: $0.00"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calcular"
            android:backgroundTint="#002b4e"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/limpiar"
            android:backgroundTint="#888888"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regresar"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
